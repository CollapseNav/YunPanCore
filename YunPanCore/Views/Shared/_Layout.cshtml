<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YunPanCoreProject</title>
    <link rel="stylesheet" href="~/Layui/css/layui.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo" style="color:chartreuse">YunPanCore</div>
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item"><a class="topbar-text" href="/UserFile/AllFile">我的文件</a></li>
                <li class="layui-nav-item"><a class="topbar-text" href="/SharedFile/AllFile">共享区域</a></li>
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <i class="layui-icon layui-icon-username"></i>
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="/UserData/Index">基本资料</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a href="/LogReg/LogOut">退出</a></li>
            </ul>
        </div>
        <div class="layui-container layui-fluid">
            <div class="layui-row">
                <script src="~/Layui/layui.js"></script>
                @RenderSection("scripts", required: false)
            </div>
        </div>
        @RenderBody()
    </div>
    <div class="layui-footer">
    </div>
    <script>
        layui.use('element', function () {
            var element = layui.element,
                $ = layui.jquery;

            $.post('/UserData/GetUserName', {}, function (res) {
                $('.layui-icon-username').html(res);
            })
        });
    </script>
</body>

</html>